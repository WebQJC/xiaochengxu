/**index.wxss**/
.slider, 
.slider image,
.slider swiper{
  width: 100%;
  height: 390rpx;
  /* //border: 1rpx red solid; */
  box-sizing: border-box;
}
.index_nav{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}
/* 首页导航 */
.index_nav .nav_item{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
   width: 33.33333%;
    height: 200rpx;
    border-bottom: 1rpx solid red;
    border-right: 1rpx solid red;
    box-sizing: border-box;
    
}
.index_nav .nav_item:nth-of-type(3n){
  border-right: 0rpx;
}

.index_nav .nav_item image{
  width: 80rpx;
  height: 80rpx;
}
.index_nav .nav_item text{
  font-size: 12px;
}



/* 模块3：首页入口分区 */
.index_enter{
  display: flex;
  padding: 20rpx 25rpx;
  
}
.index_enter .enter_item{
  width: 50%;
  display: flex;
  justify-content: center;
}
.enter_item image{
  width: 320rpx;
  height: 178rpx;
}
